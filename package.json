{
  "name": "the-sun-right-now-screensaver",
  "private": true,
  "version": "1.0.0",
  "description": "The Sun Right Now is a desktop screensaver that displays colorful 4K images of the sun in a cool slideshow. The photos are real-time (minus 8 minutes, due to the Earth's distance from the sun) and retrieved from the NASA SDO, a satellite observatory currently orbiting the Earth.",
  "main": "main.js",
  "type": "module",
  "scripts": {
    "devOld": "concurrently \"vite\" \"node api.mjs\"",
    "dev": "concurrently \"vite\" \"node api.dev.js\"",
    "electron": "electron .",
    "start": "npm run build && npm run electron",
    "build": "vite build",
    "lint": "eslint .",
    "build:electron": "npm run build && electron-builder",
    "build:mac": "npm run build && electron-builder --mac"
  },
  "homepage": "https://github.com/aleksati/the-sun-right-now-screensaver",
  "author": {
    "name": "Aleksander Tidemann",
    "email": "aleksandertid@gmail.com",
    "url": "https://github.com/aleksati/the-sun-right-now-screensaver"
  },
  "build": {
    "appId": "com.aleksati.thesunrightnow",
    "productName": "TheSunRightNow",
    "executableName": "TheSunRightNow",
    "files": [
      "dist/**/*",
      "main.js",
      "api.mjs",
      "package.json"
    ],
    "directories": {
      "output": "build"
    },
    "win": {
      "target": "portable"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "public.app-category.education",
      "hardenedRuntime": false,
      "gatekeeperAssess": false
    }
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.3",
    "@tailwindcss/vite": "^4.1.3",
    "cors": "^2.8.5",
    "electron-is-dev": "^3.0.1",
    "express": "^5.1.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-image": "^4.1.0",
    "tailwindcss": "^4.1.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^35.1.4",
    "electron-builder": "^26.0.12",
    "eslint": "^9.21.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^15.15.0",
    "vite": "^6.2.0"
  }
}
